{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm install --frozen-lockfile && pnpm build"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "pnpm start:prod",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "services": [
    {
      "name": "backend",
      "source": {
        "repo": ".",
        "branch": "main"
      },
      "build": {
        "buildCommand": "pnpm install --frozen-lockfile && pnpm --filter backend build"
      },
      "deploy": {
        "startCommand": "cd apps/backend && pnpm start:prod",
        "healthcheckPath": "/health",
        "healthcheckTimeout": 30
      }
    },
    {
      "name": "frontend",
      "source": {
        "repo": ".",
        "branch": "main"
      },
      "build": {
        "buildCommand": "pnpm install --frozen-lockfile && pnpm --filter frontend build"
      },
      "deploy": {
        "startCommand": "cd apps/frontend && pnpm preview --host 0.0.0.0 --port ${PORT:-3000}"
      }
    }
  ]
}
