{
  "name": "backend",
  "version": "1.0.1",
  "description": "NestJS backend API for AsyncStand application with authentication, user management, and audit logging",
  "main": "dist/src/main.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "prisma generate",
    "prepare": "husky install",
    "clean": "rm -rf dist coverage",
    "build": "pnpm run clean && nest build",
    "dev": "cross-env NODE_ENV=development nest start --watch",
    "dev:debug": "cross-env NODE_ENV=development nest start --watch --debug --inspect",
    "start": "node dist/src/main.js",
    "start:prod": "cross-env NODE_ENV=production node dist/src/main.js",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"{src,test}/**/*.ts\"",
    "format:check": "prettier --check \"{src,test}/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --max-warnings=0",
    "lint:fix": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "cross-env NODE_ENV=test LOG_LEVEL=silent jest --silent",
    "test:unit": "cross-env NODE_ENV=test LOG_LEVEL=silent jest --silent --selectProjects 'Unit Tests'",
    "test:unit:ci": "cross-env NODE_ENV=test LOG_LEVEL=silent jest --silent --selectProjects 'Unit Tests' --ci --coverage --reporters=default --reporters=jest-junit",
    "test:integration": "cross-env NODE_ENV=test LOG_LEVEL=silent jest --silent --selectProjects 'Integration Tests'",
    "test:integration:ci": "cross-env NODE_ENV=test LOG_LEVEL=silent jest --silent --selectProjects 'Integration Tests' --ci --coverage --reporters=default --reporters=jest-junit",
    "test:e2e": "cross-env NODE_ENV=test LOG_LEVEL=silent jest --silent --selectProjects 'E2E Tests'",
    "test:e2e:ci": "cross-env NODE_ENV=test LOG_LEVEL=silent jest --silent --selectProjects 'E2E Tests' --ci --coverage --reporters=default --reporters=jest-junit",
    "test:watch": "cross-env NODE_ENV=test jest --watch --selectProjects 'Unit Tests'",
    "test:coverage": "cross-env NODE_ENV=test LOG_LEVEL=silent jest --silent --coverage --selectProjects 'Unit Tests'",
    "test:coverage:all": "cross-env NODE_ENV=test LOG_LEVEL=silent jest --silent --coverage",
    "test:ci": "cross-env NODE_ENV=test LOG_LEVEL=silent jest --silent --ci --coverage --runInBand --maxWorkers=2",
    "test:changed": "cross-env NODE_ENV=test LOG_LEVEL=silent jest --silent --onlyChanged",
    "test:related": "cross-env NODE_ENV=test LOG_LEVEL=silent jest --silent --findRelatedTests",
    "test:performance": "cross-env NODE_ENV=test LOG_LEVEL=silent jest --silent --logHeapUsage --detectOpenHandles",
    "preview:email": "ts-node scripts/preview-email.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force",
    "db:status": "prisma migrate status"
  },
  "keywords": [
    "nestjs",
    "asyncstand",
    "authentication",
    "user-management",
    "audit-logging"
  ],
  "author": "AsyncStand Team",
  "license": "ISC",
  "packageManager": "pnpm@10.12.4",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/asyncstand/asyncstand.git",
    "directory": "apps/backend"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.5",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.5",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.5",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.4.0",
    "@node-rs/argon2": "^2.0.2",
    "@prisma/client": "6.12.0",
    "@slack/bolt": "^4.3.0",
    "@types/crypto-js": "^4.2.2",
    "@types/nodemailer": "^6.4.17",
    "axios": "^1.7.8",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "crypto-js": "^4.2.0",
    "express": "^5.1.0",
    "ioredis": "^5.6.1",
    "nestjs-pino": "^4.4.0",
    "nodemailer": "^7.0.5",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "shared": "workspace:*",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@jest/reporters": "^30.0.5",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/testing": "^11.1.5",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/nock": "^11.1.0",
    "@types/node": "^24.1.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.32.0",
    "husky": "^9.0.0",
    "jest": "^30.0.5",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "nock": "^14.0.7",
    "prettier": "^3.6.2",
    "prisma": "^6.12.0",
    "rimraf": "^5.0.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
